#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp ESC   &kp N1    &kp N2    &kp N3    &kp N4    &kp N5    &kp N6    &kp N7    &kp N8    &kp N9    &kp N0    &kp MINUS &kp EQUAL &kp BSLH  &kp DELETE
                &lt 1 TAB   &kp Q     &kp W     &kp E     &kp R     &kp T     &kp Y     &kp U     &kp I     &kp O     &kp P     &kp LBKT  &kp RBKT            &kp BSPC
                &kp LCTRL  &kp A     &kp S     &kp D     &kp F     &kp G     &kp H     &kp J     &kp K     &kp L     &kp SEMI  &kp APOS            &kp ENTER  
                &kp LSHFT           &kp Z     &kp X     &kp C     &kp V     &kp B     &kp N     &kp M     &kp COMMA &kp DOT   &kp SLASH           &mt RSHFT UP &mo 1
                &kp CAPS &kp LGUI  &kp LALT                                &kp SPACE                                         &mt RALT LEFT    &mt RGUI DOWN &mt RCTRL RIGHT
            >;
        };

        fn_layer {
            bindings = <
                &kp GRAVE  &kp F1       &kp F2       &kp F3       &kp F4       &kp F5       &kp F6    &kp F7    &kp F8          &kp F9    &kp F10   &kp F11   &kp F12   &kp DELETE &kp RG(RS(S))
                &trans     &trans       &trans       &trans       &trans       &trans       &trans    &trans    &trans          &trans    &trans    &trans    &trans               &trans
                &trans     &trans       &trans       &trans       &trans       &trans       &trans    &trans    &kp HOME        &kp PG_UP &kp trans  &trans           &trans
                &trans                  &trans       &trans       &trans       &trans       &trans    &trans    &trans          &kp END   &kp PG_DN &trans          &bt BT_NXT     &trans
                &trans     &trans       &trans                                              &trans                                                  &bt BT_CLR      &bt BT_PREV     &trans
            >;
        };
    };
